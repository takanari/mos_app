<h1>期間・季節・数量限定メニュー</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <% @mos.each_with_index do |mo, count| %>
        <td><%= link_to image_tag("menu_#{mo.id}.jpg"), mo %>
        <br><%= new_line(mo.name) %>
        <br>¥<%= mo.price %>
        <%= html_escape(raw("</tr><tr>")) if (count + 1) % 4 == 0 %>
      <% end %>
     </tr> 
  </tbody>
</table>

<br>