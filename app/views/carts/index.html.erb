<h1>ショッピングカート</h1>

<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>数量</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @carts.each do |cart| %>
      <tr>
        <td><%= cart.mo.name %></td>
        <td><%= cart.quantity %></td>
        <td><%= link_to '数量変更', edit_cart_path(cart) %></td>
        <td><%= link_to '削除', cart, method: :delete, data: { confirm: '本当に削除してよろしいですか?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'メニューに戻る', mos_path %>